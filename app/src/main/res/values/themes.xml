<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimpleLotto.DayNight" parent="Theme.SimpleLotto" />

    <style name="Theme.SimpleLotto" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/simple_lotto_gray_50</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowBackground">?attr/colorPrimary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Typo -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.SimpleLotto.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.SimpleLotto.Headline2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.SimpleLotto.Body1</item>
    </style>
</resources>